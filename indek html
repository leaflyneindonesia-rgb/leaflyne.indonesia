    <!-- Scripts -->
    <script>
        const apiKey = ""; 

        // Mobile Menu
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');
        btn.addEventListener('click', () => menu.classList.toggle('hidden'));

        // Gemini API Config
        const GEMINI_URL = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

        async function callGemini(prompt) {
            try {
                const response = await fetch(GEMINI_URL, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ contents: [{ parts: [{ text: prompt }] }] })
                });
                const data = await response.json();
                return data.candidates[0].content.parts[0].text;
            } catch (e) { return "System busy. Please try again."; }
        }

        async function generateInsight(product, outputId, btn) {
            const out = document.getElementById(outputId);
            out.classList.remove('hidden');
            out.innerText = "Analyzing market data...";
            const prompt = `You are an expert B2B agricultural broker. Provide 1 specific, high-value market insight or unique selling point for Indonesian ${product} appealing to an international importer (e.g. essential oil content superiority or harvest season advantage). Keep it under 20 words.`;
            const result = await callGemini(prompt);
            out.innerText = result;
        }

        async function draftMessage(btn) {
            const box = document.getElementById('messageBox');
            if(!box.value) { alert("Please type basic requirements first."); return; }
            const oldText = btn.innerHTML;
            btn.innerHTML = `<i class="fas fa-spinner fa-spin"></i> Drafting...`;
            // Corrected Brand Name
            const prompt = `Rewrite these rough buyer notes into a formal B2B Request for Quotation (RFQ) email body to Leaflyne Indonesia. Notes: "${box.value}". Keep it professional and concise.`;
            const result = await callGemini(prompt);
            box.value = result;
            btn.innerHTML = oldText;
        }

        function toggleChat() {
            const chatWindow = document.getElementById('ai-chat-window');
            chatWindow.classList.toggle('hidden');
            if(!chatWindow.classList.contains('hidden')) document.getElementById('chat-input').focus();
        }

        async function sendChatMessage() {
            const input = document.getElementById('chat-input');
            const message = input.value.trim();
            const container = document.getElementById('chat-messages');
            if (!message) return;

            container.innerHTML += `<div class="flex gap-2 justify-end chat-enter"><div class="bg-deepForest text-white p-3 rounded-l-xl rounded-tr-xl shadow-sm text-sm max-w-[85%]">${message}</div></div>`;
            input.value = '';
            container.scrollTop = container.scrollHeight;

            const loadingId = 'loading-' + Date.now();
            container.innerHTML += `<div id="${loadingId}" class="flex gap-2 chat-enter"><div class="w-8 h-8 rounded-full bg-deepForest flex-shrink-0 flex items-center justify-center text-white text-xs"><i class="fas fa-robot"></i></div><div class="bg-white p-3 rounded-r-xl rounded-bl-xl shadow-sm border border-gray-100 text-gray-500 text-sm"><i class="fas fa-circle-notch fa-spin"></i> Processing...</div></div>`;
            container.scrollTop = container.scrollHeight;

            // Corrected Brand Name
            const context = `Act as 'Leaflyne Export AI'. We are a premium Indonesian spice exporter (Nutmeg, Cinnamon, Cloves, Banana Leaves, Lemongrass, Ginger) based in Cijeruk. We offer FOB/CIF, 20ft container MOQ, and provide Phytosanitary/COO docs. Answer concisely for a B2B buyer. Question: "${message}"`;
            const reply = await callGemini(context);

            document.getElementById(loadingId).remove();
            container.innerHTML += `<div class="flex gap-2 chat-enter"><div class="w-8 h-8 rounded-full bg-deepForest flex-shrink-0 flex items-center justify-center text-white text-xs"><i class="fas fa-leaf"></i></div><div class="bg-white p-3 rounded-r-xl rounded-bl-xl shadow-sm border border-gray-100 text-gray-700">${reply}</div></div>`;
            container.scrollTop = container.scrollHeight;
        }
    </script>
</body>
</html>
